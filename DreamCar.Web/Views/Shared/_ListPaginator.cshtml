
@model DreamCar.Models.Common.Paginator

<div class="row">
    <div class="col-xs-12">
        <form action="@Model.ActionName" method="get">

            @Html.HiddenFor(x => x.EntitiesPerPage)
            @Html.HiddenFor(x => x.ActionName)

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group row text-center">

                <div class="col-xs-6 col-sm-offset-3 lh-30 form-inline">

                    <label for="@Html.NameFor(x => x.CurrentPage)"></label>
                    <input name="@Html.NameFor(x => x.CurrentPage)" value="@Html.ValueFor(x => x.CurrentPage)" type="number" class="form-control small-input" min="1" max="@Model.TotalPages" />
                    <input type="submit" value="Go" class="btn btn-default" />

                </div>

                <div class="col-xs-6 col-sm-offset-3">
                    <i>Total Matches</i><b> @Model.TotalMatches</b>
                    <i>Total Pages</i><b> @Model.TotalPages</b>
                </div>

            </div>

        </form>
    </div>
</div>